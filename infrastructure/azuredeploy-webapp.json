{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "type": "string"
        },
        "planName": {
            "type": "string"
        },
        "resourceGroup": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().id]"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('planName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "linux",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[parameters('planName')]",
                "numberOfWorkers": "1",
                "reserved": true
            },
            "sku": {
                "Tier": "Basic",
                "Name": "B1"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('appServiceName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('planName'))]"
            ],
            "properties": {
                "name": "[parameters('appServiceName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "DOCKER_REGISTRY_SERVER_URL",
                            "value": "https://index.docker.io"
                        }
                    ],
                    "alwaysOn": false
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('resourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('planName'))]",
                "clientAffinityEnabled": false
            }
        }
    ]
}